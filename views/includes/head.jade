head
	meta(charset="utf-8")
	meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
	title Bar Hopper
	meta(name="author", content="Pablo Gil Torres")
	meta(name="viewport", content="width=device-width")
		
	link(rel="stylesheet/less", href="/css/style.less")
	link(rel="stylesheet", href="/css/jquery-ui.css")
	script(src="/dev/less-1.3.0.min.js")
		
body(data-section=section, data-step="one")
	header#mainHeader
		hgroup
			h1 Bar Hopper
			- if (section == 'wizard')
				h2 Event generator
			- else 
				h2 Because sometimes you have to walk before you crawl
				
		- if (section == 'wizard')
			ul#wizardSteps
				li 1. Create a route
				li 2. Set a time
				li 3. Invite some peeps
		
		#headNav
			ul;
				- if (user)
					li Welcome, #{user}
				- else
					li
						a#loginLink(href="") Login
					li
						a#registerLink(href="") Register
				- if(section != 'index')
					li
						a#dashboardLink(href="/") Dashboard
				li 
					a#logoutLink(href="/logout") Logout
			
			